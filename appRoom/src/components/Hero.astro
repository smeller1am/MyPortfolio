---
const items: { image: string; color: string }[] = [
  { image: "./img/hero/2.png", color: "#FAFAFA" },
  { image: "./img/hero/3.png", color: "#000000" },
  { image: "./img/hero/1.png", color: "#FAFAFA" },
  { image: "./img/hero/4.png", color: "#010101" },
  { image: "./img/hero/6.png", color: "#FFFFFF" },
  { image: "./img/hero/5.png", color: "#000000" },
  { image: "./img/hero/7.png", color: "#F4F4F4" },
]
---

<section class="hero">
  <div class="hero__container">
    <div class="hero__swiper section">
      <div class="hero__wrapper swiper-wrapper">
        {
          items.map(({ color, image }) => (
            <a href="#" class="hero__slide swiper-slide" style={`background-color: ${color};`}>
              <img src={image} alt="" />
            </a>
          ))
        }
      </div>
      <div class="hero__prev swiper-button-prev hero__swiper-prev">
        <div class="hero__arrow icon-arrow-left"></div>
      </div>
      <div class="hero__next swiper-button-next hero__swiper-next">
        <div class="hero__arrow icon-arrow-right"></div>
      </div>
      <div class="hero__pagination swiper-pagination"></div>
    </div>
  </div>
</section>

<style is:global lang="scss">
  .hero {
    // background-color: #fafafa;
    margin-top: fluid(15px, 35px);
    margin-bottom: fluid(40px, 62px);
    overflow-x: hidden;
    &__container {
    }

    &__wrapper {
      grid-area: full;
    }

    &__arrow {
      font-size: 40px;
      color: #857f7f;
    }

    &__next,
    &__prev {
      grid-area: center;
      &::after {
        display: none;
      }
    }

    &__swiper {
      position: relative;
    }

    &__slide {
      display: flex;
      align-items: center;
      justify-content: center;
      img {
        // width: fluid(800px, 1134px);
        height: fluid(375px, 536px);
        object-fit: contain;
      }
    }

    &__pagination {
      display: none;
      --swiper-pagination-color: #{$color-text-purple};
      --swiper-pagination-bullet-inactive-color: #{$color-text-gray-light};
      --swiper-pagination-bullet-inactive-opacity: 1;
      --swiper-pagination-bullet-horizontal-gap: 5px;
      --swiper-pagination-bottom: 0;
    }
  }

  @media (max-width: 992px) {
    .hero {
      margin-top: 72px;
      margin-bottom: 15px;
      &__container {
      }

      &__wrapper {
      }

      &__arrow {
      }

      &__next,
      &__prev {
        display: none;
      }

      &__swiper {
        margin-bottom: 50px;
      }
      &__slide {
        img {
          height: 100%;
          min-height: 150px;
        }
      }

      &__pagination {
        display: block;
        margin-bottom: -40px;
      }
    }
  }
</style>

<script>
  import Swiper from "swiper"
  import { Navigation, Pagination } from "swiper/modules"

  new Swiper(".hero__swiper", {
    modules: [Navigation, Pagination],
    speed: 380,
    loop: true,
    navigation: {
      nextEl: ".hero__swiper-next",
      prevEl: ".hero__swiper-prev",
    },
    pagination: {
      el: ".hero__pagination",
      type: "bullets",
      clickable: true,
    },
  })
</script>
