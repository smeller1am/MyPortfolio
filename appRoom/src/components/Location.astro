---
interface Props {
  variant: "small" | "medium" | "large";
}

const { variant } = Astro.props;
---

<a
  href="#location"
  class:list={["location", `location--${variant}`, "modalbox"]}
>
  Саратов <span class="icon-arrow-down"></span>
</a>

<style is:global lang="scss">
  .location {
    display: inline-flex;
    align-items: center;
    transition: color 0.28s ease-in-out;

    &:hover {
      color: $color-text-purple;
    }

    &--small {
      font-size: 14px;
      gap: 6px;

      span {
        font-size: 12px;
      }
    }

    &--medium {
      font-size: 16px;
      gap: 12px;

      span {
        font-size: 14px;
      }
    }

    &--large {
      font-size: 18px;
      gap: 20px;
      margin-right: 14px;
      margin-bottom: 4px;

      span {
        font-size: 14px;
      }
    }
  }

  @media (max-width: 992px) {
    .location {
      &--large {
        font-size: 16px;
        margin: unset;
      }
    }
  }
</style>
